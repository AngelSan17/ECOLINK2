<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagen_evento"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:contentDescription=""
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toStartOf="@+id/nombre_evento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- AsegÃºrate de cambiar esta referencia a un drawable apropiado -->

    <TextView
        android:id="@+id/nombre_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/imagen_evento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Nombre del Evento" />

    <TextView
        android:id="@+id/tipo_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nombre_evento"
        app:layout_constraintTop_toBottomOf="@id/nombre_evento"
        android:text="Tipo de Evento" />

    <TextView
        android:id="@+id/hora_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tipo_evento"
        app:layout_constraintTop_toBottomOf="@id/tipo_evento"
        android:text="Hora del Evento" />

    <TextView
        android:id="@+id/encargado_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hora_evento"
        app:layout_constraintTop_toBottomOf="@id/hora_evento"
        android:text="Encargado del Evento" />

</androidx.constraintlayout.widget.ConstraintLayout>
